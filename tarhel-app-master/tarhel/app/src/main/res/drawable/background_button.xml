<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/colorPrimary" />
                    <!-- alttan gölge -->
                    <corners android:radius="@dimen/_10sdp" />
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item android:bottom="1.5px" android:left="1.5px" android:right="1.5px"
                android:top="1.5px">
                <shape>
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="@dimen/_10sdp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/colorPrimaryDark" />
                    <corners android:radius="@dimen/_10sdp" />

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="1px" android:left="1px" android:right="1px" android:top="1px">
                <shape>
                    <solid android:color="@color/colorPrimaryDark" />
                    <corners android:radius="@dimen/_10sdp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>