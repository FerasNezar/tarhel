<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_10sdp"
   >

  <LinearLayout
      android:id="@+id/layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

          <com.makeramen.roundedimageview.RoundedImageView
              android:id="@+id/img_order"
              android:layout_width="@dimen/_45sdp"
              android:layout_height="@dimen/_45sdp"
              app:riv_corner_radius="@dimen/_10sdp"
              android:elevation="@dimen/_4sdp"
              android:layout_gravity="center"
              android:layout_margin="@dimen/_6sdp"
              android:adjustViewBounds="true"
              android:scaleType="centerCrop"
              />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/_4sdp"
              android:layout_marginStart="@dimen/_4sdp"
              android:layout_marginEnd="@dimen/_4sdp"
             android:padding="@dimen/_2sdp">

              <TextView
                  android:id="@+id/tv_provider_name"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/_6sdp"
                  android:ellipsize="end"
                  android:fontFamily="@font/tajawal_medium"
                  android:maxLines="1"
                  android:textColor="@color/txt_color"
                  android:textSize="@dimen/_14ssp"/>

              <TextView
                  android:id="@+id/tv_offer_status"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginEnd="@dimen/_8sdp"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:background="@drawable/background_confirmed"
                  android:fontFamily="@font/tajawal_regular"
                  android:padding="4dp"
                  android:textColor="@color/white"
                  android:textSize="@dimen/_10ssp" />


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/_2sdp"
              android:layout_marginBottom="@dimen/_4sdp"
              android:layout_marginStart="@dimen/_4sdp"
              android:layout_marginEnd="@dimen/_4sdp"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/tv_offer_price"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="@dimen/_4sdp"
                  android:layout_marginBottom="@dimen/_4sdp"
                  android:ellipsize="end"
                  android:fontFamily="@font/tajawal_regular"
                  android:maxLines="1"
                  android:textColor="@color/txt_color"
                  android:textSize="@dimen/_12ssp"/>

              <com.willy.ratingbar.ScaleRatingBar
                  android:id="@+id/rt_provider"
                  android:layout_width="@dimen/_70sdp"
                  android:layout_height="@dimen/_16sdp"
                  android:layout_marginEnd="@dimen/_4sdp"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:visibility="visible"
                  app:srb_clearRatingEnabled="true"
                  app:srb_clickable="false"
                  app:srb_drawableEmpty="@drawable/ic_star_empty"
                  app:srb_drawableFilled="@drawable/ic_star_fill"
                  app:srb_isIndicator="true"
                  app:srb_minimumStars="0"
                  app:srb_numStars="5"
                  app:srb_starHeight="@dimen/_10sdp"
                  app:srb_starPadding="2dp"
                  app:srb_starWidth="@dimen/_10sdp"
                  app:srb_stepSize="1"/>

          </LinearLayout>

      </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>