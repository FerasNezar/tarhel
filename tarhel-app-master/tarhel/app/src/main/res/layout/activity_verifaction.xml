<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verifaction.VerifactionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:text="@string/verifaction_code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18ssp" />

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/quantum_ic_arrow_back_grey600_24"
                    android:tint="@color/colorPrimaryDark" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_24sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_16sdp"
                android:background="@drawable/ic_ellipse">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_pofile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/aaber_logo"
                    android:background="@android:color/transparent" />


            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_enter_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/tajawal_medium"
            android:gravity="center"
            android:text="@string/enter_code"
            android:textSize="@dimen/_16ssp" />


        <LinearLayout
            android:id="@+id/cd_new_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/background_with_border"
            android:gravity="center">

            <com.raycoarana.codeinputview.CodeInputView
                android:id="@+id/code_input_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:code_text_color="@color/text_color"
                app:animate_on_complete="false"
                app:error_color="#77ce9d"
                app:input_type="numeric"
                app:length_of_code="6"
                app:underline_color="#38383840"
                app:underline_selected_color="@color/text_color" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_resend_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/tajawal_medium"
                android:text="@string/resend_code"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_14ssp" />

            <ticker.views.com.ticker.widgets.circular.timer.view.CircularView
                android:id="@+id/circular_view"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                app:m_arc_stroke_color="@color/colorPrimary"
                app:m_cicle_stroke_width="6"
                app:m_circle_radius="14"
                app:m_circle_stroke_color="@color/txt_color" />

        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>