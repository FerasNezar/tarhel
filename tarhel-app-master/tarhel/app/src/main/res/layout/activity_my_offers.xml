<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.myOffer.MyOffersActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:fontFamily="@font/tajawal_medium"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="@string/menu_my_offers"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/quantum_ic_arrow_back_grey600_24"
                app:tint="@color/colorPrimaryDark" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white">

       <com.cooltechworks.views.shimmer.ShimmerRecyclerView
           android:id="@+id/rv_offers"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="@dimen/_8sdp"
           app:layout_behavior="@string/appbar_scrolling_view_behavior"
           app:shimmer_demo_angle="20"
           app:shimmer_demo_child_count="8"
           app:shimmer_demo_grid_child_count="1"
           app:shimmer_demo_layout="@layout/shimmer_item_order_offer"
           app:shimmer_demo_layout_manager_type="linear_vertical" />

       <LinearLayout
           android:id="@+id/ly_no_offers"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:visibility="gone"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:orientation="vertical">

           <ImageView
               android:layout_width="@dimen/_70sdp"
               android:layout_height="@dimen/_80sdp"
               android:scaleType="centerCrop"
               android:src="@drawable/ic_percent"
               android:adjustViewBounds="true"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="@dimen/_16sdp"
               android:textColor="@color/txt_color"
               android:textSize="@dimen/_14ssp"
               android:fontFamily="@font/tajawal_medium"
               android:text="@string/no_offers_found"/>

       </LinearLayout>

   </RelativeLayout>


</LinearLayout>